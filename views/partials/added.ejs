

<% if(added.length>0) {%>
    <div class="alert alert-success alert-dismissible fade show mt-3" id="alertClose" role="alert" style="margin: 3rem;">
        <%= added %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="cls()"></button>
<% } %>

<script>
    const alerts = document.getElementById('alertClose')
    function cls(){
        alerts.style.display = "none"
    }
</script>