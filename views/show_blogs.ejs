<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/css2?family=Akshar:wght@300&family=Cedarville+Cursive&family=Inter+Tight:wght@300;600&family=Inter:wght@500&family=Kdam+Thmor+Pro&family=League+Gothic&family=Nunito:ital,wght@1,200&family=Poppins:wght@300&family=Roboto+Condensed:wght@700&display=swap" rel="stylesheet">
   
    <title>Document</title>

    <style>
      body{
        font-family: 'Poppins', sans-serif;
      }
      h3,p{
        text-align: center;
      }
      p{
        font-size: clamp(.4rem, 1.5vw, .7rem);
      }
      a{
        text-decoration: none;
        border: none;
      }
      .col-lg-3{
        border: 2px solid black;
        
        border-radius: 11px;
        
      }
      

      .img-fluid{
        width: 100%;
        height: 17rem;
        padding: 1rem;
      
      }
      button{
        border: none;
        background: none;
      }

      .button{
        display: flex;
        justify-content: space-between;
        width: 100%;
        border: none;
        background: none;
        padding: 0;
        
      }

      dl, ol, ul{
        display: flex;
        list-style: none;
        
      }

      .navbars {
    display: flex;
    justify-content: center;
    width: 100%;
    text-indent: 3rem;
    
    }
    </style>
</head>
<body>
  
  <%- include('../views/partials/navbar.ejs') %> 
  <form class="navbar navbar-light my-3" style="width: 100%;">
    <div class="container-fluid d-flex justify-content-center align-items-center">
      <form class="">
        <input class="form-control me-" type="search" placeholder="Search" name="search" style="width:51rem;" id="search">
      </form>
    </div>
  </form>

  <div class="alert_message" style="text-align: center;">
   <%- include('../views/partials/added.ejs') %> 
   <%- include('../views/partials/update_alert.ejs') %> 
   
  </div>

    <div class="container-fluid my-5" style="margin: 0rem;">
      <div class="row d-flex flex-row justify-content-center" id="cards">
        <% if(data) {%>
          <% data.forEach(item => { %> 
        <div class=" col-lg-3 col-md-5 col-sm-4" id="card" style="margin: 2rem;" >
          <img src=" <%= item.image %> " class="img-fluid">
          <h3 class="text"><%= item.author %></h3>
          <p class="text"><%= item.description %></p>
          <div class="button">
            <a href="delete/<%= item.id %> "class="material-symbols-outlined">delete</a>
            <a href="edit/<%= item.id %> " class="material-symbols-outlined">edit_note</a>
          </div>
          </div>
          <% }) %> 
        <% }%>
        
      </div>
     <%- include('../views/partials/pagination.ejs') %> 
    </div>
  
    

  </body>

<script>
  document.querySelector('#search').addEventListener('input', filterlist)

function filterlist(){
  const searchInput = document.querySelector('#search')
  const filter = searchInput.value.toLowerCase()
  const items = document.querySelectorAll('#card')
  

  items.forEach(item => {
    let text = item.textContent
    if(text.toLowerCase().includes(filter.toLowerCase())){
      item.style.display=''
    }else{
      item.style.display='none'

    }
  })
}


</script>
</html>